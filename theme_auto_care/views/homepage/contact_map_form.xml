<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="ac_map_form" name="Contact Map Form">
    <section id="map_nd_form" class="map-contact-section">
      <div class="container">
        <div class="map-contact-grid">

          <!-- Map -->
          <div class="map-container">
            <h2>Find Us</h2>
            <div class="map-wrapper">
              <iframe
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3024.2219901290355!2d-74.00369368459413!3d40.71312997933185!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c25a23e28c1191%3A0x49f75d3281df052a!2s150%20Park%20Row%2C%20New%20York%2C%20NY%2010007!5e0!3m2!1sen!2sus!4v1625097607820!5m2!1sen!2sus"
                width="100%"
                height="400"
                style="border:0;"
                allowfullscreen=""
                loading="lazy"
                referrerpolicy="no-referrer-when-downgrade">
              </iframe>
            </div>
            <div class="map-info">
              <h3>Easy to Find Location</h3>
              <p>We're conveniently located in the heart of Auto City with plenty of parking available. Our facility is easily accessible from major highways and public transportation.</p>
              <div class="map-features">
                <div class="map-feature">
                  <i class="fa fa-product-hunt"></i>
                  <span>Free Parking</span>
                </div>
                <div class="map-feature">
                  <i class="fa fa-bus"></i>
                  <span>Public Transit</span>
                </div>
                <div class="map-feature">
                  <i class="fa fa-wheelchair-alt"></i>
                  <span>Wheelchair Accessible</span>
                </div>
              </div>
            </div>
          </div>

          <!-- Contact Form -->
          <div class="contact-form-container">
            <h2>Send Us a Message</h2>
            <p class="form-subtitle">Have a question or need service? We'd love to hear from you!</p>

            <form id="contactForm" class="contact-form" novalidate="true">
              <div class="form-row">
                <div class="form-group">
                  <label for="firstName">First Name <span style="color:red">*</span></label>
                  <input type="text" id="firstName" name="firstName" required="true"/>
                </div>
                <div class="form-group">
                  <label for="lastName">Last Name <span style="color:red">*</span></label>
                  <input type="text" id="lastName" name="lastName" required="true"/>
                </div>
              </div>

              <div class="form-row">
                <div class="form-group">
                  <label for="email">Email Address <span style="color:red">*</span></label>
                  <input type="email" id="email" name="email" required="true"/>
                </div>
                <div class="form-group">
                  <label for="phone">Phone Number <span style="color:red">*</span></label>
                  <input type="tel" id="phone" name="phone" required="true"/>
                </div>
              </div>

              <div class="form-group">
                <label for="subject">Subject <span style="color:red">*</span></label>
                <select id="subject" name="subject" required="true">
                  <option value="">Select a subject</option>
                  <option value="general">General Inquiry</option>
                  <option value="service">Service Question</option>
                  <option value="booking">Appointment Booking</option>
                  <option value="complaint">Complaint</option>
                  <option value="compliment">Compliment</option>
                  <option value="emergency">Emergency Service</option>
                  <option value="other">Other</option>
                </select>
              </div>

              <div class="form-group">
                <label for="message">Message <span style="color:red">*</span></label>
                <textarea id="message" name="message" rows="5" placeholder="Please describe your inquiry..." required="true"></textarea>
              </div>

              <!-- Feedback Message -->
              <div id="formMessage" style="display:none; margin-bottom:10px; font-weight:600;"></div>

              <button type="submit" class="btn btn-primary submit-btn">
                <i class="fa fa-send"></i>
                Send Message
              </button>
            </form>
          </div>
        </div>
      </div>


    </section>
  </template>
</odoo>